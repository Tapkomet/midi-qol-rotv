<form>
    {{#each formulas as | formula idx |}}
    <div class="form-group">
        <label>{{ formula.label }} {{#if type}}({{type}}){{/if}}</label>
        <label> {{formula.value}}</label>
          <input data-id="{{formula.id}}" type="checkbox" name="formula.active" data-dtype="Boolean" {{checked formula.active}} />
    </div>
    {{/each}}
    {{#if chooseModifier}}
    <div class="form-group">
        <label>{{ localize "ROTV.AbilityModifier" }}</label>
        <select name="ability">
            {{selectOptions abilities selected=defaultAbility labelAttr="label"}}
        </select>
    </div>
    {{/if}}
    <div class="form-group">
        <label>{{ localize "ROTV.RollSituationalBonus" }}</label>
        <input type="text" name="bonus" value="" placeholder="{{ localize 'ROTV.RollExample' }}"/>
    </div>
    <div class="form-group">
        <label>{{ localize "ROTV.RollMode" }}</label>
        <select name="rollMode">
            {{selectOptions rollModes selected=defaultRollMode localize=true}}
        </select>
    </div>
</form>
